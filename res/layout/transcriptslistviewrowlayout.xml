<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@+drawable/btnstyle" >

    <TextView
        android:id="@+id/transcripts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
         android:textStyle="bold"
        android:textColor="@color/itemTitleColor"
        android:textSize="@dimen/contentTitle"  />
  

    <View
         android:id="@+id/transcriptsheaderUnderline"
         style="@style/Underline"
         android:layout_marginBottom="5dp"
                 android:layout_marginTop="@dimen/default_title_indicator_footer_line_height"
         android:layout_below="@+id/transcripts_title"
        />
    <TextView
        android:id="@+id/transcripts_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/transcriptsheaderUnderline"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif"
        android:textSize="18sp" />
  

    <Button
        android:id="@+id/downloadbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_title_indicator_footer_line_height"
        android:layout_alignRight="@+id/transcripts_summary"
        android:background="@+drawable/btnstyle"
        android:layout_below="@+id/transcripts_summary"
        android:text="@string/downloadbutton" />

    <ImageButton
        android:id="@+id/sharebutton"
        style="@drawable/btnstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/downloadbutton"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_action_share" />
 
</RelativeLayout> 
